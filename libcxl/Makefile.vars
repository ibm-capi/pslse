# Disable built-in rules
MAKEFLAGS += -rR

AS = $(CROSS_COMPILE)as
AR = $(CROSS_COMPILE)ar
LD = $(CROSS_COMPILE)ld
CC = $(CROSS_COMPILE)gcc
CFLAGS += -Wall -I$(CURDIR) -I$(COMMON_DIR) -fPIC

ifeq ($(BIT32),y)
  CFLAGS += -m32
else
  CFLAGS += -m64
endif

ifdef DEBUG
 CFLAGS += -g -pg -DDEBUG
else
 CFLAGS += -O2
endif

ifdef PSL8
  CFLAGS += -DPSL8
endif
 
ifdef PSL9
  CFLAGS += -DPSL9
endif
